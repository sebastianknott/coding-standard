{
    "name": "sebastianknott/coding-standard",
    "description": "This is my very own coding-standard. A mellow mix between Slevomat and PSR-12.",
    "type": "phpcodesniffer-standard",
    "license":"GPL-3.0-only",
    "authors": [
        {
            "name": "Sebastian Knott",
            "email": "sebastian@sebastianknott.de"
        }
    ],
    "require": {
        "php": "^8.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^2.0.3",
        "phpstan/phpstan-mockery": "^2.0.0",
        "phpstan/phpstan-phpunit": "^2.0.1",
        "slevomat/coding-standard": "^8.16.0",
        "squizlabs/php_codesniffer": "^3.12.0"
    },
    "require-dev": {
        "roave/security-advisories": "@dev"
    },
    "autoload-dev": {
        "psr-4": {
            "SebastianKnott\\CodingStandard\\Test\\": "test/"
        }
    },
    "config": {
        "sort-packages" : true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
